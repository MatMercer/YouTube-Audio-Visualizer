{
    "manifest_version": 2,
    "name": "Youtube Audio Visualizer",
    "version": "0.2",
    "description": "A HTML5 audio visualizer for YouTube. Contribute to it now! https://github.com/MrAnyone/YouTube-Audio-Visualizer",
    "author": "MrAnyone",
    "icons": {
        "16": "ytav_icon_16.png",
        "48": "ytav_icon_48.png",
        "128": "ytav_icon_128.png"
    },
    "web_accessible_resources": ["pixi.js", "jquery.js", "ytav.js", "ytav_listeners.js"],
    "content_scripts": [
        {
            "runs_at": "document_end",
            "matches": [
                "https://www.youtube.com/watch?v=*",
                "https://youtu.be/*"
            ],
            "js": ["jquery.js", "injector.js", "injector_listeners.js"]
        }
    ],
    "browser_action": {
        "default_title": "YouTube Audio Visualizer",
        "default_icon": "ytav_icon_16.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://www.youtube.com/watch?v=*",
        "https://youtu.be/*"
    ]
}
